{
  "compilerOptions": {
    "target": "ES2018",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "noImplicitAny": false,
    "jsx": "preserve",
    "moduleResolution": "node",
    "isolatedModules": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "typeRoots": ["./types"],
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
  ]
}
